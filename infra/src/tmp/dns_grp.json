{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "privateEndpoints_sec_wf_priv_endpoint_name": {
            "defaultValue": "sec-wf-priv-endpoint",
            "type": "String"
        },
        "storageAccounts_secwfstorage_externalid": {
            "defaultValue": "/subscriptions/de47847e-1e04-4c18-99de-a11f659d3119/resourceGroups/sec-wf-files-rg/providers/Microsoft.Storage/storageAccounts/secwfstorage",
            "type": "String"
        },
        "virtualNetworks_sec_wf_lap_vnet_externalid": {
            "defaultValue": "/subscriptions/de47847e-1e04-4c18-99de-a11f659d3119/resourceGroups/sec-wf-workflow-rg/providers/Microsoft.Network/virtualNetworks/sec-wf-lap-vnet",
            "type": "String"
        },
        "privateDnsZones_privatelink_file_core_windows_net_externalid": {
            "defaultValue": "/subscriptions/de47847e-1e04-4c18-99de-a11f659d3119/resourceGroups/sec-wf-workflow-rg/providers/Microsoft.Network/privateDnsZones/privatelink.file.core.windows.net",
            "type": "String"
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.Network/privateEndpoints",
            "apiVersion": "2023-11-01",
            "name": "[parameters('privateEndpoints_sec_wf_priv_endpoint_name')]",
            "location": "polandcentral",
            "properties": {
                "privateLinkServiceConnections": [
                    {
                        "name": "[parameters('privateEndpoints_sec_wf_priv_endpoint_name')]",
                        "id": "[concat(resourceId('Microsoft.Network/privateEndpoints', parameters('privateEndpoints_sec_wf_priv_endpoint_name')), concat('/privateLinkServiceConnections/', parameters('privateEndpoints_sec_wf_priv_endpoint_name')))]",
                        "properties": {
                            "privateLinkServiceId": "[parameters('storageAccounts_secwfstorage_externalid')]",
                            "groupIds": [
                                "file"
                            ],
                            "privateLinkServiceConnectionState": {
                                "status": "Approved",
                                "description": "Auto-Approved",
                                "actionsRequired": "None"
                            }
                        }
                    }
                ],
                "manualPrivateLinkServiceConnections": [],
                "customNetworkInterfaceName": "[concat(parameters('privateEndpoints_sec_wf_priv_endpoint_name'), '-nic')]",
                "subnet": {
                    "id": "[concat(parameters('virtualNetworks_sec_wf_lap_vnet_externalid'), '/subnets/sec-wf-lap-snet-1')]"
                },
                "ipConfigurations": [],
                "customDnsConfigs": []
            }
        },
        {
            "type": "Microsoft.Network/privateEndpoints/privateDnsZoneGroups",
            "apiVersion": "2023-11-01",
            "name": "[concat(parameters('privateEndpoints_sec_wf_priv_endpoint_name'), '/default')]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/privateEndpoints', parameters('privateEndpoints_sec_wf_priv_endpoint_name'))]"
            ],
            "properties": {
                "privateDnsZoneConfigs": [
                    {
                        "name": "foo_privatelink_file_core_windows_net",
                        "properties": {
                            "privateDnsZoneId": "[parameters('privateDnsZones_privatelink_file_core_windows_net_externalid')]"
                        }
                    }
                ]
            }
        }
    ]
}